{
	"name": "@blaboard/server",
	"type": "module",
	"main": "src/shared/http/index.ts",
	"exports": {
		".": {
			"import": "./src/shared/http/index.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/shared/http/index.ts --outfile server",
		"dev": "bun run --hot src/shared/http/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"@blaboard/auth": "workspace:*",
		"@blaboard/db": "workspace:*",
		"@blaboard/env": "workspace:*",
		"@elysiajs/cors": "1.4.1",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"elysia": "1.4.22",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@blaboard/config": "workspace:*",
		"@types/bun": "catalog:",
		"tsdown": "0.16.5",
		"typescript": "catalog:"
	}
}
