		"db:watch": "docker compose up",
		"db:stop": "docker compose stop",
		"db:down": "docker compose down"
	},
	"dependencies": {
		"@blaboard/env": "workspace:*",
		"@prisma/client": "6",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@blaboard/config": "workspace:*",
		"prisma": "6",
		"typescript": "catalog:"
	}
}
